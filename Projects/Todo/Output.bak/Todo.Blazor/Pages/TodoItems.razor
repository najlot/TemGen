@page "/todoitems"
@using Cosei.Client.Base;
@using Cosei.Client.Http;
@using Microsoft.Extensions.Localization;
@using Todo.Blazor.Identity;
@using Todo.Blazor.Services;
@using Todo.Client.Data.Models;
@using Todo.Client.Data.Services;
@using Todo.Client.Data;
@using Todo.Client.Localisation;
@using Todo.Contracts.Events;
@inject ILogger<TodoItems> Log
@inject Najlot.Map.IMap Map
@inject ITodoItemService TodoItemService
@inject ISubscriberProvider SubscriberProvider
@inject IAuthenticationService AuthenticationService
@inject NavigationManager NavigationManager
@implements IDisposable

<PageTitle>@TodoItemLoc.TodoItems</PageTitle>

@if (todoItems == null)
{
	<p><em>@CommonLoc.Loading...</em></p>
}
else
{
	<table class="table table-sm table-striped">
		<thead>
			<tr>
				<th>@TodoItemLoc.Title</th>
				<th>@TodoItemLoc.Content</th>
				<th><a href="/TodoItem/@Guid.Empty" class="btn btn-success w-100">@CommonLoc.New</a></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var todoItem in todoItems)
			{
				<tr scope="row">
					<td class="text-break">@LimitDisplayLength(todoItem.Title, 75)</td>
					<td class="text-break">@LimitDisplayLength(todoItem.Content, 75)</td>
					<td><a href="/TodoItem/@todoItem.Id" class="btn btn-primary w-100">@CommonLoc.Edit</a></td>
				</tr>
			}
		</tbody>
	</table>
}

@code {
	[CascadingParameter(Name = "ErrorService")]
	protected IErrorService? ErrorService { get; set; }

	private List<TodoItemListItemModel>? todoItems;

	private ISubscriber? Subscriber;

	private string LimitDisplayLength(string? value, int maxLength)
	{
		if (maxLength < 3) throw new InvalidOperationException("MaxLength must be greater than 3");
		if (string.IsNullOrWhiteSpace(value)) return "";
		if (value.Length <= maxLength) return value;
		return value.Substring(0, maxLength - 3) + "...";
	}

	protected override async Task OnInitializedAsync()
	{
		var state = await AuthenticationService.GetAuthenticationStateAsync();

		if (state.User.Identity is null)
		{
			var url = NavigationManager.BuildReturnUrl("/login");
			NavigationManager.NavigateTo(url);
			return;
		}

		try
		{
			todoItems = new List<TodoItemListItemModel>(await TodoItemService.GetItemsAsync());

			Subscriber = await SubscriberProvider.GetSubscriber();

			Subscriber.Register<TodoItemCreated>(Handle);
			Subscriber.Register<TodoItemUpdated>(Handle);
			Subscriber.Register<TodoItemDeleted>(Handle);

			await Subscriber.StartAsync();
		}
		catch (System.Security.Authentication.AuthenticationException)
		{
			var url = NavigationManager.BuildReturnUrl("/login");
			NavigationManager.NavigateTo(url);
		}
		catch (Exception ex)
		{
			Log.LogError(ex, "Error loading todoitems.");
			ErrorService?.ShowError("Error", "Could not load. Server error.");
		}
	}

	private async Task Handle(TodoItemCreated message)
	{
		if (todoItems is null)
		{
			return;
		}

		var item = Map.From(message).To<TodoItemListItemModel>();

		todoItems.Insert(0, item);

		await InvokeAsync(StateHasChanged);
	}

	private async Task Handle(TodoItemUpdated message)
	{
		if (todoItems is null)
		{
			return;
		}

		var entry = todoItems.FirstOrDefault(t => t.Id == message.Id);

		if (entry is not null)
		{
			Map.From(message).To(entry);
		}

		await InvokeAsync(StateHasChanged);
	}

	private async Task Handle(TodoItemDeleted message)
	{
		if (todoItems is null)
		{
			return;
		}

		var entry = todoItems.FirstOrDefault(t => t.Id == message.Id);

		if (entry is null)
		{
			return;
		}

		todoItems.Remove(entry);

		await InvokeAsync(StateHasChanged);
	}

	public void Dispose()
	{
		Subscriber?.Unregister(this);
	}
}
