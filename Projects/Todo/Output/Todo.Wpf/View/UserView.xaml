<UserControl x:Class="Todo.Wpf.View.UserView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:local="clr-namespace:Todo.Wpf.View"
			 xmlns:loc="clr-namespace:Todo.Client.Localisation;assembly=Todo.Client.Localisation"
			 xmlns:converter="clr-namespace:Todo.Wpf.Converter"
			 xmlns:s="clr-namespace:System;assembly=System.Runtime"
			 mc:Ignorable="d"
			 d:DesignHeight="500" d:DesignWidth="600">

	<StackPanel>
			<DockPanel Margin="5">
				<Label Content="{x:Static loc:UserLoc.Username}" MinWidth="75" />
				<TextBox Text="{Binding Username}" />
			</DockPanel>
			<DockPanel Margin="5">
				<Label Content="{x:Static loc:UserLoc.EMail}" MinWidth="75" />
				<TextBox Text="{Binding EMail}" />
			</DockPanel>
			<DockPanel Margin="5">
				<Label Content="{x:Static loc:UserLoc.Password}" MinWidth="75" />
				<TextBox Text="{Binding Password}" />
			</DockPanel>
	</StackPanel>
</UserControl>
